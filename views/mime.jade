extends layout

block content
    #mime.clearfix.mime
        - if (!user.nickname)
            h3.syncing
                i.icon-spinner.icon-spin.icon-large 正在同步您的数据，请勿关闭本页面...
        - if (user.nickname)
            h3 #{user.nickname ? user.nickname : user.duoshuo.user_id}
        - if (user.avatar)
            img.avatar.fn-left(src="#{user.avatar}").fn-left
    .ds-demo.fn-clear.fn-hide
        .ds-thread
block js
    - if (!user.nickname)
        script.
            var duoshuoQuery = {
                short_name: "#{site.duoshuo.short_name}",
                sso: { 
                   login: "#{href}/signin/",
                   logout: "#{href}/signout/"
                }
            };
            (function() {
                var ds = document.createElement('script');
                ds.type = 'text/javascript';ds.async = true;
                ds.src = 'http://static.duoshuo.com/embed.js';
                ds.charset = 'UTF-8';
                (document.getElementsByTagName('head')[0] 
                || document.getElementsByTagName('body')[0]).appendChild(ds);
            })();
        script(src="/javascripts/mime.js")