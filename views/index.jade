extends layout

block content
     .main-board.board.index-board
        - if (threads.length > 0)
            - each thread in threads
                .pub-main.lz-board
                    .single-pub.clearfix
                        .avatar
                            img(src="#{thread.lz.avatar}")
                        h4.title
                            a(href="/thread/#{thread.id}") #{thread.name}
                        .author
                            span.name #{thread.lz}
                            span.cat
                                i.icon-chevron-right
                                | #{board.name}
                                i.icon-star.star
                            i.icon-time
                            |#{new Date(thread.pubdate).getFullYear()}
                    .board-meta.clearfix
                        span.views
                            i.icon-eye-open
                            | 23726
                        span.num
                            i.icon-comment
                            | 136
        - else
            h4.no
                i.icon-ban-circle
                | #{site.name} 还没有人来过，想 
                a(href="/thread/new") 说点什么 
                | 吗？
