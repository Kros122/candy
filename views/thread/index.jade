extends ../layout

block content
      .board
        .pub-main.lz-board
            .single-pub.clearfix
                .avatar
                    img(src="#{thread.lz.avatar}").avatar
                h4.title #{thread.name}
                .author
                    span.name #{thread.lz.nickname ? thread.lz.nickname : thread.lz.duoshuo.user_id}
                    span.cat
                        i.icon-chevron-right
                        a(href="/board/#{thread.board._id}",title="#{thread.board.name}") #{thread.board.name}
                    i.icon-time
                    | #{thread.pubdate}
                .desc #{thread.content}
        .board-meta
            span.views
                i.icon-eye-open
                | #{thread.views}
            span.num
                i.icon-comment
                | 128 跟帖
            span.add-com-btn
                i.icon-share-alt
                | 128 分享
        .comment-board
            include ../comment.jade