doctype 5
html
  head
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    title #{site.name}
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block header
        header
            #ihd.container.clearfix
                .row
                    .col-lg-12
                      #logo.clearfix.fn-left
                        h1.clearfix
                            a(href="/") #{site.name}
                                span.desc #{site.desc}
    block banner
    article#cnt
        #icnt.container.clearfix
          .row
            block content
            block sidebar
                .col-lg-3
                   form#topSearch.search
                          .input-group(ng-controller="ctrlers.search")
                            input(type="text",ng-model="search.keyword").form-control
                            .input-group-btn
                                a.btn.btn-primary(href="#",ng-click="search()")
                                    i.icon-search
                   - if (user)
                        #mime.clearfix.side-cnt
                            h3.side-title 欢迎回来
                                | , #{user.nickname ? user.nickname : user.duoshuo.user_id}
                            - if (user.avatar)
                                .avatar_container
                                    img(src="#{user.avatar}",alt="#{user.nickname ? user.nickname : user.duoshuo.user_id}",title="#{user.nickname ? user.nickname : user.duoshuo.user_id}").avatar-mini.fn-right
                            ul.clearfix
                                li
                                    i.icon-angle-right
                                    a(href="/mime")
                                        | 我的 #{site.name}
                                li
                                    i.icon-angle-right
                                    a(href="/thread/new")
                                        |发帖子
                                li
                                    i.icon-angle-right
                                    a(href="#")
                                        | 我的关注
                                li
                                    i.icon-angle-right
                                    a(href="http://#{site.duoshuo.short_name}.duoshuo.com/logout/?sso=1&redirect_uri=#{href}/signout").signout 登出
                   - else
                        #signin.clearfix.side-cnt
                            h3.side-title 登录 #{site.name}
                            .ds-login.clearfix
    block footer
      footer
        #ft.clearfix
            #ift.container.clearfix.copyright &copy; #{new Date().getFullYear()} 『#{site.name}』 #{site.desc} | Powered by 
                    a(href="https://github.com/turingou/candy",title="npm install candy").candy #{sys.name} 
                    |@ #{sys.version}

    //- scripts
    script(src="/javascripts/lib/jquery-1.10.2.min.js")
    script(src="/javascripts/lib/angular.min.js")
    script(src="/javascripts/lib/angular-resource.min.js")
    script(src="/javascripts/store.js")
    //- duoshuo configs
    script.
        var duoshuoQuery = {
            short_name: "#{site.duoshuo.short_name}",
            sso: { 
               login: "#{href}/signin/",
               logout: "#{href}/signout/"
            }
        };
        (function() {
            var ds = document.createElement('script');
            ds.type = 'text/javascript';ds.async = true;
            ds.src = 'http://static.duoshuo.com/embed.js';
            ds.charset = 'UTF-8';
            (document.getElementsByTagName('head')[0] 
            || document.getElementsByTagName('body')[0]).appendChild(ds);
        })();
    //- custom js
    block js